<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Validacion_WEB</title>
    <link rel="stylesheet" href="~/css/banner.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>

    <header>
        <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Indel" asp-action="Principal">
                    <img src="/img/Idel.png" alt="Logo" width="90" height="65" class="d-inline-block align-text-top">
                </a>
                <div class="collapse navbar-collapse" id="navbarCollapse">
                    <ul class="navbar-nav me-auto mb-2 mb-md-0">
                        <li class="nav-item">
                            <a class="nav-link active" asp-controller="Indel" asp-action="Principal">INDEL</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Usuarios" asp-action="Login">Administracion</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

   


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="b-example-divider"></div>


        <footer class="d-flex flex-wrap justify-content-between align-items-center py-3 my-4 border-top">
            <div class="col-md-4 d-flex align-items-center">
                <a href="/" class="mb-3 me-2 mb-md-0 text-body-secondary text-decoration-none lh-1">
                <img class="bi" width="90" height="65" src="/img/Idel.png"></img>
                </a>
                <span class="mb-3 mb-md-0 text-body-secondary">&copy; 2024 INDEL</span>
            </div>

            <ul class="nav col-md-4 justify-content-end list-unstyled d-flex">
              <li class="ms-3"><a class="link-body-emphasis" href="#"><img class="bi" width="40" height="40" src="/img/Iconos/facebook.png"></img></a></li>
              <li class="ms-3"><a class="link-body-emphasis" href="#"><img class="bi" width="40" height="40" src="/img/Iconos/Twiter.png"></img></a></li>
              <li class="ms-3"><a class="link-body-emphasis" href="#"><img class="bi" width="40" height="40" src="/img/Iconos/Instagram.png"></img></a></li>
            </ul>
        </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
